<Window x:Class="ToDoListDev.Views.WindowDeleteTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoListDev.Views"
        mc:Ignorable="d"
        Title="WindowDeleteTask" Height="1080" Width="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.07*"/>
            <RowDefinition/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="To-Do List" FontSize="50" FontWeight="Bold" Margin="50,2,0,2"/>
            <Border Grid.Column="1" Width="113" Height="58" HorizontalAlignment="Right" Margin="0,2,50,2" BorderThickness="2" BorderBrush="Black" CornerRadius="40">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="BtnLeft" Margin="10,4" Width="40" Height="40" HorizontalAlignment="Left" BorderThickness="0"/>
                    <Button x:Name="BtnRight" Margin="0,4,10,4" Width="40" Height="40" HorizontalAlignment="Right" BorderThickness="0"/>
                </StackPanel>
            </Border>
        </Grid>
        <TextBlock Grid.Row="1" Text="Список задач" FontSize="40" Margin="50,0" FontWeight="Bold" HorizontalAlignment="Left"/>
        <DataGrid Grid.Row="2" HeadersVisibility="None">

        </DataGrid>
        <Button Grid.Row="3"  Content="Удалить" Width="253" Height="80" HorizontalAlignment="Center" Margin="0,2,50,2"/>
        </Grid>
</Window>
